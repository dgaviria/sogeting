<% @users.each do |user| %>
  <tr>
    <td><%= user.facebook_id %></td>
    <td><%= user.f_name %></td>
    <td><%= user.m_name %></td>
    <td><%= user.l_name %></td>
    <td><%= user.gender %></td>
    <td><%= user.link %></td>
    <td><%= user.hometown %></td>
    <td><%= user.bio %></td>
    <td><%= user.birth_day %></td>
    <td><%= user.birth_month %></td>
    <td><%= user.birth_year %></td>
    <td><%= user.email %></td>
    <td><%= user.timezone %></td>
    <td><%= user.location %></td>
    <td><%= user.political %></td>
    <td><%= user.quotes %></td>
    <td><%= user.relationship_status %></td>
    <td><%= user.religion %></td>
    <td><%= user.website %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

