<h1>Listing winks</h1>

<table>
  <tr>
    <th>Match</th>
	<th></th>
    <th>Friend</th>
    <th>Status</th>
  </tr>

<% @winks.each do |wink| %>

<% user1 = User.find(wink.friend_id) %>
<% user2 = User.find(wink.match_id) %>

  <tr>
      <td style="width:96px;"><%= gravatar_for user2 %></td>
	<td style="width:200px;">
	<div>
	<b><%= user2.f_name %></b><br/>
	<%= user2.bio %>
	</div>
	</td>
    <td style="width:96px;"><%= gravatar_for2 user1 %><div style="text-align:center;">
	<b><%= user1.f_name %></b><br/>
	</div></td>
	
	

    <td><span style="font-size:14px;" class="label <%= get_status wink.status %>"><%= wink.status %></span></td>
  </tr>
<% end %>
</table>

